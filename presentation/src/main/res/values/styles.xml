<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Removing actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerDropDownStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="EmptyScreenText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SpinnerDropDownStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SpinnerStyle" parent="@style/Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>
